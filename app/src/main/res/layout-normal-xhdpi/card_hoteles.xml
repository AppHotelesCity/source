<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.adroid.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewHotel"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewHotel"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/city_logo"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewHotel"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="City Express Puebla AngelÃ³polis"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/textViewDescripcionHotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A 5 minutos de Plaza Angelopolis y a 20 minutos del Centro de la Ciudad"
                        android:gravity="left"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_below="@id/title"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Desde"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textViewPrecioHotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$730"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="0dp"
                        android:textColor="#fff"
                        android:textSize="26sp"
                        android:layout_below="@id/title"
                        android:layout_marginTop="0dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/impuestos"
                        android:layout_below="@id/textViewPrecioHotel"
                        android:layout_marginTop="0dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_marginRight="0dp"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

</android.support.v7.widget.CardView>