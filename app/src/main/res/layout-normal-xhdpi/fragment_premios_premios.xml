<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@android:color/white">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp">



		<ImageView
			android:id="@+id/imgBack"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:src="@drawable/reserva_back"
			android:layout_alignParentLeft="true"
			android:clickable="true"/>

		<TextView
			android:id="@+id/lblBack"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:gravity="center"
			android:text="Regresar"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/main_color1"
			android:layout_marginLeft="6dp"
			android:layout_toRightOf="@id/imgBack"
			android:clickable="true"/>

		<TextView
			android:id="@+id/lblDisponibles"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/main_color1"
			android:layout_alignParentRight="true"
			android:text="puntos disponibles"/>

	</RelativeLayout>

	<ListView
		android:id="@+id/list_categorias"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="#FFFFFF"
		android:dividerHeight="1px"
		android:listSelector="@drawable/cat_pri_selector">
	</ListView>

</LinearLayout>